#include<bits/stdc++.h>
using namespace std;

#define ll long lnog int
#define rep(i,a,b) for(ll i=a;i<=b;i++)
#define rrep(i,a,b) for(ll i=b;i>=a;i--)
#define fastio() ios_base::sync_with_stdio(false);cin.tie(NULL);cout.tie(NULL)


void avinash()
{
    int x;
    cin>>x;
    
    if(x>=4){
       if(x%2==0){
        cout<<"YES"<<endl;
    } 
    else{
        cout<<"NO"<<endl;
    }
    }
    
    else{
        cout<<"NO"<<endl;
    }

}


int main()
{
	fastio();		
	avinash();	
}
