// https://codeforces.com/problemset/problem/71/A

//avinash_kumar



#include<bits/stdc++.h>
using namespace std;

int main()
{
    int t;
    cin>>t;
    while(t--)
    {
        string str;
        cin>>str;
        int l;
        l = str.length();
        if(l>10)
        {    
            l -= 2;
            char c1,c2;
            c1 = str[0];
            c2 = str[str.length() - 1];
            cout<<c1<<l<<c2<<endl;
        }
        
        else{
            cout<<str<<endl;
        }
    }
    
    
    return 0;
}
