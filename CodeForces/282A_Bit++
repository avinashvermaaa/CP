// https://codeforces.com/problemset/problem/282/A


//avinash_kumar



#include<bits/stdc++.h>
using namespace std;

int main()
{
    int t,p=0;  cin>>t;

    while(t--)
    {
        string str;
        cin>>str;
        if(str[1]=='+')
        {
            p++;
        }
        
        else{
            p--;
        }
    }
    
    cout<<p<<endl;
    
    return 0;
}
