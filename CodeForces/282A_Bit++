#include<bits/stdc++.h>
using namespace std;

int main()
{
    int t;
    cin>>t;
   
    int p = 0;
    while(t--)
    {
            
        string str,str1,str2;
        cin>>str;
        int x=-1;
        if(str[1]=='+')
        {
            p++;
        }
        
        else{
            p--;
        }
    }
    
    cout<<p<<endl;
    
    return 0;
}
